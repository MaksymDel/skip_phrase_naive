{
    "dataset_reader": {
        "type": "skip_gram_examples",
        "pivot_phrase_token_indexers": {
            "words": {
                "type": "single_id",
                "lowercase_tokens": false,
                "namespace": "shared_words_vocab"   
            }
        },
        "context_word_token_indexers": {
            "words": {
                "type": "single_id",
                "lowercase_tokens": false,
                "namespace": "shared_words_vocab"    
            }
        }
    },
    "vocabulary": {
      "max_vocab_size": 30000
    },
    "train_data_path": "../../data/europarl/skipgram.train.w2.3m.en",
    "validation_data_path": "tests/fixtures/lines-skipgram.en",
    "model": {
      "type": "skip_gram",
      "text_field_embedder": {
        "words": {
          "type": "embedding",
          "embedding_dim": 300,
          "trainable": true,
          // "sparse": true,
          "vocab_namespace": "shared_words_vocab"
        }
      },
      "pivot_phrase_encoder": {
        "type": "rnn",
        "input_size": 300,
        "hidden_size": 300,
        "bidirectional": false
      }
    },
    "iterator": {
      "type": "bucket",
      "sorting_keys": [["pivot_phrase", "num_tokens"]],
      "padding_noise": 0.0,
      "batch_size": 400
    },
  
    "trainer": {
      "num_epochs": 12,
      "cuda_device": 0,
      "patience": 4,
      "grad_clipping": 10.0,
      "validation_metric": "-loss",
      "no_tqdm": false,
      "optimizer": {
        "type": "adam",
        "lr": 0.01
        // "type": "sgd",
        // "momentum": 0,
        // "lr": 0.001
      }
    }
}